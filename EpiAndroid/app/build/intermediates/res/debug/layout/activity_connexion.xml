<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".ConnexionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/app_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginInput"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_name"
        android:id="@+id/loginLabelCo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/loginEdit"
        android:layout_below="@id/loginLabelCo"
        android:background="@color/loginEdit"
        android:hint="@string/loginInput"
        android:textColorHint="@color/loginEditText"
        android:paddingLeft="@dimen/paddingLoginEditText"
        android:id="@+id/editLogin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pwdInput"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editLogin"
        android:id="@+id/pwdLabelCo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/loginEdit"
        android:layout_below="@id/pwdLabelCo"
        android:background="@color/loginEdit"
        android:hint="@string/pwdInput"
        android:textColorHint="@color/loginEditText"
        android:paddingLeft="@dimen/paddingLoginEditText"
        android:inputType="textVisiblePassword"
        android:id="@+id/editPwd"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPwd"
        android:text="@string/connexion"
        android:onClick="sendInfos"
        android:id="@+id/connectButton"/>
</RelativeLayout>
